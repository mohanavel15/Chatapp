version: "3.1"
services:
  mongodb:
    image: mongo:5.0
    restart: always
    container_name: "ChatDB"
    environment:
      MONGO_INITDB_ROOT_USERNAME: username
      MONGO_INITDB_ROOT_PASSWORD: password
    ports:
      - 27017:27017
    networks:
      - chatnetwork
    deploy:
      resources:
        limits:
          memory: '512M'
          cpus: '1'
  chatserver:
    container_name: "ChatServer"
    build: .
    environment:
      SERVER_HOST: "0.0.0.0"
      SERVER_PORT: "5000"
      JWT_SECRET: "some_random_string"
      MONGO_URI: "mongodb://username:password@mongodb:27017"
      MONGO_DATABASE: "database"
    ports:
      - 5000:5000
    depends_on:
      - mongodb
    networks:
      - chatnetwork
    deploy:
      resources:
        limits:
          memory: '512M'
          cpus: '1'

networks:
  chatnetwork:
    driver: bridge